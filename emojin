class CustomButton(urwid.Button):
    button_left = urwid.Text('')
    button_right = urwid.Text('')

def write_to_fifo(button):
    with open(os.path.expanduser("~/.weechat/weechat_fifo"),"w") as fp:
        fp.write("*/input insert %s\n" % button.label)

def main():
    buttonlist = []

    for i in range(0, len(emojilist)):
        button = CustomButton(emojilist[i])
        urwid.connect_signal(button, 'click', write_to_fifo)
        buttonlist.append(button)

    grid = urwid.GridFlow(buttonlist, cell_width=2, h_sep=1, v_sep=1, align='center')
    fill = urwid.Filler(grid, 'top')

    def handle_key(key):
        if key in ('q', 'Q'):
            sys.exit()
            
    loop = urwid.MainLoop(fill, handle_mouse=False, unhandled_input=handle_key)
    loop.run()

if __name__ == "__main__":
    main()

